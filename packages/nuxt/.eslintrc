{
	"root": true,
	"extends": ["@nuxt/eslint-config"],

	"rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"prefer-destructuring": ["warn", { "object": true, "array": true }],

		"vue/html-indent": ["error", "tab"],
		"vue/multi-word-component-names": 0,
		"vue/no-v-text-v-html-on-component": 0
	}
}
